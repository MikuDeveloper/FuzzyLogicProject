<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ttn.developer.fuzzylogicproject.ResultController">
   <content>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <center>
            <VBox fx:id="resultBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <ProgressIndicator prefHeight="200.0" prefWidth="200.0" />
                  <Label text="Analizando sus respuestas...">
                     <font>
                        <Font name="Dubai Medium" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER" prefWidth="200.0" style="-fx-background-color: #379e90;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Resultado de análisis de crédito" textFill="WHITE">
                     <font>
                        <Font name="Gill Sans MT" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" top="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </top>
         <bottom>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#goToHome" styleClass="material-button" text="Volver a inicio" visible="false" />
               </children>
               <padding>
                  <Insets bottom="50.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </content>
</ScrollPane>
